class Solution {
public:
    bool backspaceCompare(string S, string T) 
    {
        stack<char> s1, s2;
        /*将两个字符串分别入栈，遇到'#'出栈一个*/
        for(char &i : S){
            if(i == '#'){
                if(!s1.empty())
                    s1.pop();
            }
            else
                s1.push(i);
        }
        for(char &i : T){
            if(i == '#'){
                if(!s2.empty())
                    s2.pop();
            }
            else
                s2.push(i);
        }
        /*判断两个栈中留下的是否相等，若不等则为false*/
        while(!s1.empty() && !s2.empty()){
            if(s1.top() != s2.top())
                return false;
            s1.pop();
            s2.pop();
        }
        if(!s1.empty() || !s2.empty())
            return false;

        return true;
    }
};

